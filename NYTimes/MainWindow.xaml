<Window x:Class="NYTimes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NY Times Search" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <TextBlock Text="Search term: " VerticalAlignment="Center" Margin="5,0,5,0" />
            <TextBox x:Name="SearchTermTextBox" Width="200" Margin="5,0,5,0" />
            <Button x:Name="SearchButton" Content="Search" Click="SearchButton_Click" Margin="5,0,0,0" />
        </StackPanel>

        <ListBox x:Name="ListBoxArticles" Grid.Row="1" Margin="5"
                 ItemsSource="{Binding Articles}" DisplayMemberPath="Headline"
                 SelectionChanged="ListBoxArticles_SelectionChanged"/>
        <TextBlock x:Name="ParsingErrorTextBox" TextWrapping="Wrap" Margin="10,0,10,10" Text="" Foreground="Red" FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Bottom" />


        <TextBlock x:Name="ArticleContentTextBlock" Grid.Row="1" Margin="5,0,5,5" TextWrapping="Wrap" />
    </Grid>
</Window>
